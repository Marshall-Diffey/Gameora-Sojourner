doctype html
html
  block head
    title=title
    link(rel='stylesheet' href='/stylesheets/reset.css')
    script(src="/javascripts/index.js" type="module")
  body
    nav#navbar
      span.left-navBar
        a.navButton(href='/')
          img#logo(src="/images/logo.png")
      //- div(class="fps" id="fps") fps:#{num}
      span.right-navBar
        button.navButton
          a(class="create-question" href='/questions') Create Question
        if authenticated
          form(action="/users/logout" method="post")
            button.navButton(type="submit") Logout
          div.navButton Welcome, #{user.userName}
        else
          button
            a(href="/users/login") Login
          button
            a(href="/users/register") Register
          form(action='/users/logindemo' method='post')
            button(type='submit' class="demo-button") Demo User
        div(class="fps" id="fps") fps:22
        div(class="ping" id="ping") ping:20 ms
  block content
