extends layout

append head
    //- add page specific styles by appending to the head
    title=title
    link(rel="stylesheet" href="/stylesheets/index.css")
    //- add page specific js
    script(src="/javascripts/index.js" type="module")
    script(src="/javascripts/homeClick.js" type="module")

block content

  div(class="img-container")
    img(src="/images/logo.png" class="game-ora-pic")
  span(class="topic-container")
      each topic in topics
        a(href=`/topics/${topic.id}` class="topic-buttons")=topic.type
  div(class="page-container")
    div(class="question-container" name="question-container")
      if !searchResults
        each question in questions
          div(class="single-question-container")
            label(for="question" class="question-label" value=question.id id=question.id) #{question.title}
            div(name="question" id=question.id class="jebhadtodoit" value=question.id)= question.body
      else if searchResults.length
        each question in searchResults
          div(class="single-question-container")
            label(for="question" class="question-label" value=question.id id=question.id) #{question.title}
            div(name="question" id=question.id class="jebhadtodoit" value=question.id)= question.body
      else
        div.no-search-results-message No results were found for the search input
