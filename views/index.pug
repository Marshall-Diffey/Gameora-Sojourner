extends layout

append head
    //- add page specific styles by appending to the head
    title=title
    link(rel="stylesheet" href="/stylesheets/index.css")
    //- add page specific js
    script(src="/javascripts/index.js" type="module")
    script(src="/javascripts/homeClick.js" type="module")

block content
  div(class="img-container")
    img(src="/images/logo.png" class="game-ora-pic")
  span(class="topic-container")
      each topic in topics
        a(href=`/topics/${topic.id}` class="topic-buttons")=topic.type
  div(class="page-container")
    span(class="placeholder")
    div(class="question-container")
      each question in questions
        div(id='questionDiv' class="single-question-container")
          label(for="question" class="question-label") Title: #{question.title}
          div(name="question" id=question.id)= question.body
    
